<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@drawable/user1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/img_following"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/img_following"
        app:layout_constraintStart_toEndOf="@id/img_following"
        app:layout_constraintBottom_toBottomOf="@id/img_following"
        android:layout_marginStart="16dp"
        style="@style/TextAppearance.AppCompat.Large"
        tools:text = "Jake Wharton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_following"/>

</androidx.constraintlayout.widget.ConstraintLayout>